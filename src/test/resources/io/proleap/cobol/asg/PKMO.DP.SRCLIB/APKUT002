016800                                                                  01680000
016900 A100-MAIN.                                                       01690000
017000                                                                  01700000
017100     PERFORM B100-INITIALIZE.                                     01710000
017200                                                                  01720000
017300     PERFORM B200-PROCESS-RECEIPTS                                01730000
017400       UNTIL OUT-OF-POS.                                          01740000
017500                                                                  01750000
017600     PERFORM B300-END-PROGRAM.                                    01760000
017700                                                                  01770000
017800     GOBACK.                                                      01780000
017900                                                                  01790000
018000*----------------------------------------------------------------*01800000
018100*    INITIALIZATION PROCESSING                                   *01810000
018200*    CALLED FROM A100-MAIN                                       *01820000
018300*----------------------------------------------------------------*01830000
018400 B100-INITIALIZE.                                                 01840000
018500                                                                  01850000
018600     OPEN INPUT  PO-STORE-FILE.                                   01860000
018700     OPEN OUTPUT RECEIPT-REFORM-FILE.                             01870000
018800                                                                  01880000
018900     INITIALIZE  DCLTPURCHS                                       01890000
019000                 PS-PROGRAM-SWITCHES.                             01900000
019100                                                                  01910000
019200     PERFORM R100-READ-EXTRACT-REC.                               01920000
019300                                                                  01930000
019400*----------------------------------------------------------------*01940000
019500*    FORMATS THE OUTPUT RECORD(*) AND WRITES THEM.               *01950000
019600*    CALLED FROM A100-MAIN                                       *01960000
019700*----------------------------------------------------------------*01970000
019800 B200-PROCESS-RECEIPTS.                                           01980000
019900                                                                  01990000
020000     INITIALIZE AP006-VERIFIED-RECEIPT-FILE.                      02000000
020100                                                                  02010000
020200     IF SE-PO NOT    = PV-PO-BEING-PROCESSED                      02020000
020300         MOVE SE-PO TO PV-PO-BEING-PROCESSED                      02030000
020400                       PV-PO-NBR                                  02040000
020500         PERFORM R900-GET-PO-INFO.                                02050000
020600                                                                  02060000
020700     MOVE 'VE'       TO AP006-AMT-TYP-CDE.                        02070000
020800     MOVE SE-LOC-NBR TO AP006-LOC-NBR.                            02080000
020900     MOVE SE-PO      TO AP006-PO-NBR.                             02090000
021000                                                                  02100000
021100     IF  PURCHS-PO-TYP-CDE = ('IM' OR 'IE' OR 'IF')               02110000
021200         MOVE SE-COST-EXTENSION     TO AP006-COST-AMT             02120000
021300         PERFORM W200-WRITE-RECEIPTS-SUM                          02130000
021400         ADD 1 TO PV-PO-COUNT-OUT-VE                              02140000
021500     ELSE                                                         02150000
021600         MOVE SE-1ST-COST-EXTENSION TO AP006-COST-AMT             02160000
021700         PERFORM W200-WRITE-RECEIPTS-SUM                          02170000
021800         ADD 1 TO PV-PO-COUNT-OUT-VE                              02180000
021900**       IF  PURCHS-OTB-PER-NBR       > '200801'                  02190004
022000         IF (PURCHS-DERVD-LBL-TYP-CDE = 'P'                       02200004
022010         OR  PURCHS-DERVD-LBL-TYP-CDE = 'E')                      02201004
022100         AND SE-COST-EXTENSION    NOT = SE-1ST-COST-EXTENSION     02210000
022200             MOVE 'LD'      TO AP006-AMT-TYP-CDE                  02220000
022300             COMPUTE AP006-COST-AMT =                             02230000
022400                 SE-COST-EXTENSION - SE-1ST-COST-EXTENSION        02240000
022500             PERFORM W200-WRITE-RECEIPTS-SUM                      02250000
022600             ADD 1 TO PV-PO-COUNT-OUT-LD                          02260000
022700         END-IF                                                   02270000
022800     END-IF.                                                      02280000
022900                                                                  02290000
023000     PERFORM R100-READ-EXTRACT-REC.                               02300000
023100                                                                  02310000
023200*----------------------------------------------------------------*02320000
023300*    ENDING PROCESSING: DISPLAYS COUNT OF POS AND CLOSES FILES.  *02330000
023400*    CALLED FROM A100-MAIN                                       *02340000
023500*----------------------------------------------------------------*02350000
023600 B300-END-PROGRAM.                                                02360000
023700                                                                  02370000
023800     DISPLAY '************************************************'.  02380000
023810     DISPLAY '     PROGRAM APKUT002 COMPLETES SUCCESSFULLY'.      02381000
023900     DISPLAY '     NBR OF POS READ     = ' PV-PO-COUNT-IN.        02390000
024000     DISPLAY '     NBR OF VE RECS RECS = ' PV-PO-COUNT-OUT-VE.    02400000
024100     DISPLAY '     NBR OF LD RECS RECS = ' PV-PO-COUNT-OUT-LD.    02410000
024200     DISPLAY '************************************************'.  02420000
024300                                                                  02430000
024400     CLOSE PO-STORE-FILE                                          02440000
024500           RECEIPT-REFORM-FILE.                                   02450000
024600                                                                  02460000
024700*----------------------------------------------------------------*02470000
024800*    RETRIEVES THE PURCHASE ORDERS TO BE PROCESSED.              *02480000
024900*    CALLED FROM B100-INITIALIZE AND B200-PROCESS-RECEIPTS       *02490000
025000*----------------------------------------------------------------*02500000
025100 R100-READ-EXTRACT-REC.                                           02510000
025200                                                                  02520000
025300     READ PO-STORE-FILE        INTO STORE-EXTRACT-LINE            02530000
025400         AT END SET OUT-OF-POS TO TRUE.                           02540000
025500                                                                  02550000
025600     IF MORE-POS                                                  02560000
025700        ADD 1 TO PV-PO-COUNT-IN                                   02570000
025800     END-IF.                                                      02580000
025900                                                                  02590000
026000*----------------------------------------------------------------*02600000
026100*    RETRIEVE PO TYPE INFORMATION.                                02610000
026200*    CALLED FROM C100-PROCESS-INPUT-POS                          *02620000
026300*----------------------------------------------------------------*02630000
026400 R900-GET-PO-INFO.                                                02640000
026500                                                                  02650000
026600     EXEC SQL                                                     02660000
026700         SELECT  OTB_PER_NBR                                      02670000
026800                ,PO_TYP_CDE                                       02680000
026900                ,DERVD_LBL_TYP_CDE                                02690000
027000           INTO :PURCHS-OTB-PER-NBR                               02700000
027100               ,:PURCHS-PO-TYP-CDE                                02710000
027200               ,:PURCHS-DERVD-LBL-TYP-CDE                         02720000
027300           FROM  TPURCHS                                          02730000
027400          WHERE  VER_STATUS_CDE = 'A'                             02740000
027500            AND  PO_NBR         = :PV-PO-NBR                      02750000
027600     END-EXEC.                                                    02760000
027700                                                                  02770000
027800     EVALUATE TRUE                                                02780000
027900         WHEN SQLCODE = ZERO                                      02790000
028000              CONTINUE                                            02800000
028100         WHEN SQLWARN0 NOT = SPACES                               02810000
028200         WHEN SQLCODE  NOT = ZERO                                 02820000
028300             MOVE 'R900-GET-PO-INFO'     TO AA-PARAGRAPH-NAME     02830000
028400             MOVE 'UNSUCCESSFUL SELECT ' TO AA-DB2-OP-1           02840000
028500             MOVE 'TPURCHS'              TO AA-DB2-TABLE-1        02850000
028600             PERFORM Z998-DB2-ABEND                               02860000
028700     END-EVALUATE.                                                02870000
028800                                                                  02880000
028900*----------------------------------------------------------------*02890000
029000*    WRITES THE PO/STORE RECEIPTS SUM RECORDS.                   *02900000
029100*    CALLED FROM C100-PROCESS-INPUT-POS                          *02910000
029200*----------------------------------------------------------------*02920000
029300 W200-WRITE-RECEIPTS-SUM.                                         02930000
029400                                                                  02940000
029500     WRITE RECEIPTS-RECORD FROM AP006-VERIFIED-RECEIPT-FILE.      02950000
029600                                                                  02960000
029700*----------------------------------------------------------------*02970000
029800*    ABEND ROUTINE FOR DB2 ERRORS                                *02980000
029900*    CALLED FROM R900-GET-PO-INFO                                *02990000
030000*----------------------------------------------------------------*03000000
030100 Z998-DB2-ABEND.                                                  03010000
030200                                                                  03020000
030300     DISPLAY 'PO BEING PROCESSED    = ' PV-PO-BEING-PROCESSED.    03030000
030400     DISPLAY AA-ABEND-LIT.                                        03040000
