00002 ** PAYMENT TERMS FORMATTING                                    *  POPD002 
00003 ****************************************************************     LV003
00004                                                                      CL**2
00005      INITIALIZE PO020-PAYT-TERM-ID-DESC2.                            CL**3
00006                                                                      CL**2
00007      MULTIPLY PAYTRM-DISCOUNT-PCT BY +100 GIVING                     CL**2
00008                                       PO020-NUM-DISCOUNT-PCT.        CL**2
00009                                                                      CL**2
00010      MOVE PO020-NUM-DISCOUNT-PCT   TO PO020-EDIT-DISCOUNT-PCT.       CL**2
00011      MOVE PAYTRM-DISCOUNT-DAYS-QTY TO PO020-EDIT-DISCOUNT-DAYS.      CL**2
00012      MOVE PAYTRM-DUE-DAY-QTY       TO PO020-EDIT-DUE-DAYS.           CL**2
00013      MOVE PAYTRM-OTHER-TXT         TO PO020-OTHER-TEXT.              CL**2
00014      MOVE PAYTRM-PAY-TERM-ID       TO PO020-EDIT-PAY-TERM-ID.        CL**2
00015                                                                      CL**2
00016      IF PO020-OTHER-TEXT > SPACES                                    CL**2
00017          STRING PO020-EDIT-PAY-TERM-ID  '  - '                       CL**2
00018                 PO020-OTHER-TEXT                                     CL**2
00019                 DELIMITED BY SIZE                                    CL**2
00020                 INTO PO020-PAYT-TERM-ID-DESC2                        CL**2
00021      ELSE                                                            CL**2
00022          IF PAYTRM-DISCOUNT-PCT > ZEROES                             CL**2
00023              IF PO020-EDIT-DISCOUNT-DAYS > SPACES                    CL**2
00024                IF PO020-EDIT-DUE-DAYS > SPACES                       CL**2
00025                   IF PAYTRM-DUE-DAY-FR-DTE-TXT > SPACES              CL**2
00026                       STRING PO020-EDIT-PAY-TERM-ID  '  - '          CL**2
00027                              PO020-EDIT-DISCOUNT-PCT ' % '           CL**2
00028                              PO020-EDIT-DISCOUNT-DAYS ' DAYS NET '   CL**2
00029                              PO020-EDIT-DUE-DAYS ' '                 CL**2
00030                              DELIMITED BY SIZE                       CL**2
00031                              PAYTRM-DUE-DAY-FR-DTE-TXT               CL**2
00032                              DELIMITED BY ' '                        CL**2
00033                              INTO PO020-PAYT-TERM-ID-DESC2           CL**2
00034                   ELSE                                               CL**2
00035                       STRING PO020-EDIT-PAY-TERM-ID  '  - '          CL**2
00036                              PO020-EDIT-DISCOUNT-PCT ' % '           CL**2
00037                              PO020-EDIT-DISCOUNT-DAYS ' DAYS NET '   CL**2
00038                              PO020-EDIT-DUE-DAYS ' '                 CL**2
00039                              DELIMITED BY SIZE                       CL**2
00040                              INTO PO020-PAYT-TERM-ID-DESC2           CL**2
00041                   END-IF                                             CL**2
00042                ELSE                                                  CL**2
00043                   IF PAYTRM-DUE-DAY-FR-DTE-TXT > SPACES              CL**2
00044                        STRING PO020-EDIT-PAY-TERM-ID  '  - '         CL**2
00045                               PO020-EDIT-DISCOUNT-PCT ' % '          CL**2
00046                               PO020-EDIT-DISCOUNT-DAYS ' DAYS '      CL**2
00047                               DELIMITED BY SIZE                      CL**2
00048                               PAYTRM-DUE-DAY-FR-DTE-TXT              CL**2
00049                               DELIMITED BY ' '                       CL**2
00050                               INTO PO020-PAYT-TERM-ID-DESC2          CL**2
00051                   ELSE                                               CL**2
00052                        STRING PO020-EDIT-PAY-TERM-ID  '  - '         CL**2
00053                               PO020-EDIT-DISCOUNT-PCT ' % '          CL**2
00054                               PO020-EDIT-DISCOUNT-DAYS ' DAYS '      CL**2
00055                               DELIMITED BY SIZE                      CL**2
00056                               INTO PO020-PAYT-TERM-ID-DESC2          CL**2
00057                   END-IF                                             CL**2
00058                END-IF                                                CL**2
00059              END-IF                                                  CL**2
00060          ELSE                                                        CL**2
00061              IF PO020-EDIT-DUE-DAYS > SPACES                         CL**2
00062                 IF PAYTRM-DUE-DAY-FR-DTE-TXT > SPACES                CL**2
00063                     STRING PO020-EDIT-PAY-TERM-ID  '  - '            CL**2
00064                            'NET '                                    CL**2
00065                            PO020-EDIT-DUE-DAYS ' '                   CL**2
00066                            DELIMITED BY SIZE                         CL**2
00067                            PAYTRM-DUE-DAY-FR-DTE-TXT                 CL**2
00068                            DELIMITED BY ' '                          CL**2
00069                            INTO PO020-PAYT-TERM-ID-DESC2             CL**2
00070                 ELSE                                                 CL**2
00071                     STRING PO020-EDIT-PAY-TERM-ID  '  - '            CL**2
00072                            'NET '                                    CL**2
00073                            PO020-EDIT-DUE-DAYS                       CL**2
00074                            DELIMITED BY SIZE                         CL**2
00075                            INTO PO020-PAYT-TERM-ID-DESC2             CL**2
00076                 END-IF                                               CL**2
