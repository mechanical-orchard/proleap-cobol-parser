010800***************************************************************** 01080001
010900 PROCEDURE DIVISION.                                              01090001
011000***************************************************************** 01100001
011100     DISPLAY '**** BEGINNING XLKUT007 ****'.                      01110001
011200     DISPLAY ' '.                                                 01120001
011300                                                                  01130001
011400     OPEN INPUT  VSM-STYLE-FILE                                   01140001
011410          OUTPUT LOGISTIC-STYLE-FILE.                             01140001
011500                                                                  01150001
011600     PERFORM 1000-READ-INPUT-FILE.                                01160001
011700                                                                  01170001
012100     PERFORM 2000-PROCESS-INPUT-FILE                              01210001
012200       UNTIL PS-EOF-INPUT-YES.                                    01220001
012300                                                                  01230001
012310     CLOSE VSM-STYLE-FILE                                               01
012320           LOGISTIC-STYLE-FILE.                                         01
012500                                                                  01250001
012600     DISPLAY '   INPUT VSM STYLE RECS  = ' PV-RECORDS-READ.       01260001
012700     DISPLAY '  OUTPUT VSM STYLE RECS  = ' PV-RECORDS-WRITTEN.          01
012800     DISPLAY ' '.                                                 01280001
012900     DISPLAY '****  END OF  XLKUT007  ****'.                      01290001
013000                                                                  01300001
013100     GOBACK.                                                      01310001
013200                                                                  01320001
013300                                                                  01330001
013400***************************************************************** 01340001
013500*  READ A VSM STYLE RECORD                                        01350003
013600***************************************************************** 01360001
013700 1000-READ-INPUT-FILE.                                            01370001
013800                                                                  01380001
013900     MOVE '1000-READ-INPUT-FILE    ' TO PV-ABEND-PARAGRAPH.       01390001
014000                                                                  01400001
014010     INITIALIZE IM058-ITEM-STYLE-DOMAIN-REC.                      01401003
014020                                                                  01402003
014100     READ VSM-STYLE-FILE                                          01410004
014200          INTO IM058-ITEM-STYLE-DOMAIN-REC                        01420001
014300            AT END                                                01430001
014400               SET PS-EOF-INPUT-YES TO TRUE                       01440001
014900     END-READ.                                                    01490001
015000                                                                  01500001
015010     IF PS-EOF-INPUT-YES                                                  
015020        CONTINUE                                                          
015030     ELSE                                                                 
015040        ADD +1 TO PV-RECORDS-READ                                         
015050     END-IF.                                                              
015100                                                                  01510001
015200***************************************************************** 01520001
015300*  REFORMAT THE VSM STYLE EXTRACT FILE                          * 01530003
015400***************************************************************** 01540001
015500 2000-PROCESS-INPUT-FILE.                                         01550001
015600                                                                  01560001
015700     MOVE '2000-PROCESS-INPUT-FILE ' TO PV-ABEND-PARAGRAPH.       01570001
015800                                                                  01580001
015900     MOVE IM058-RMS-STYL-ID          TO XL007-STYL-ID.                  03
016000     MOVE IM058-DEPT-NBR             TO XL007-DEPT-NBR.                 03
016100     MOVE IM058-MAJ-CL-NBR           TO XL007-MAJ-CL-NBR.               03
016200     MOVE IM058-SUB-CL-NBR           TO XL007-SUB-CL-NBR.               03
016300     MOVE IM058-VS-ID                TO XL007-VS-ID.                    03
016310     MOVE IM058-VS-NBR               TO XL007-VS-NBR.                   03
016320     MOVE IM058-ENT-ID               TO XL007-ENT-ID.                   03
016330     MOVE IM058-STKR-NBR             TO XL007-STKR-NBR.                 03
016340     MOVE IM058-TKT-TYP-DESC         TO XL007-TKT-TYP-DESC.             03
016360     MOVE IM058-HNG-FOLD-DESC        TO XL007-HNG-FOLD-DESC.            03
016360     MOVE IM058-VS-DESC              TO XL007-VS-DESC.                  03
016360     MOVE IM058-VS-DESC              TO XL007-VS-DESC.                  03
      *CLP 07/14/2015 START                                                     
016360     MOVE IM058-LBL-SEQ-NBR          TO XL007-LBL-SEQ-NBR.              03
      *CLP 07/14/2015 END                                                       
016370                                                                  01637003
016400     PERFORM 2100-WRITE-OUTPUT.                                         03
017700                                                                  01770001
017800     PERFORM 1000-READ-INPUT-FILE.                                01780001
018500                                                                  01850001
018600                                                                  01860001
