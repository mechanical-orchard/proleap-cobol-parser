021600                                                                  02160000
021700*---------------------------------------------------------------* 02170000
021800*    DEFINE CURSOR FOR TPOAGMT :                                * 02180000
021900*    PULL ALL AVAILABLE COLUMNS, SO EXTRACT FILE WILL CONTAIN   * 02190000
022000*    ALL DATA TO POPULATE "ARCHIVE HISTORY" COPY OF THIS TABLE. * 02200000
022100*---------------------------------------------------------------* 02210000
022200     EXEC SQL                                                     02220000
022300          DECLARE TABLE-CURSOR CURSOR FOR                         02230000
022400           SELECT PO_NBR                                          02240000
022500                 ,VER_NBR                                         02250000
022600                 ,AGRMT_TYP_ID                                    02260000
022700                 ,SEQ_NBR                                         02270000
022800                 ,VER_STATUS_CDE                                  02280000
022900                 ,TYP_CDE                                         02290000
023000                 ,TKT_MKR_IND                                     02300000
023100                 ,BULK_STK_TKT_IND                                02310000
023200                 ,EDI_PROMO_TXT                                   02320000
023300                 ,PO_CAN_DAY_QTY                                  02330000
023400                 ,AUTO_PO_CAN_IND                                 02340000
023500                 ,DISC_DOL_AMT                                    02350000
023600                 ,DISC_PCT                                        02360000
023700                 ,DISC_PAY_DAY_QTY                                02370000
023800                 ,LAST_UPD_TMST                                   02380000
023900                 ,PAYT_TERM_ID                                    02390000
024000                 ,LAST_UPD_BY_UID                                 02400000
024100                 ,LEADTIME_DAYS_QTY                               02410000
024300           FROM   TPOAGMT                                         02430000
024400          WHERE  (PO_NBR = :PV-PO-NBR-COMP)                       02440000
024600            FOR  FETCH ONLY                                       02460000
024700           WITH  UR                                               02470000
024800     END-EXEC.                                                    02480000
024900                                                                  02490000
