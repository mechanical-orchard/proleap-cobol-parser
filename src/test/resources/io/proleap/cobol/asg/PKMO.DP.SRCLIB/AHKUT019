025100 PROCEDURE DIVISION.                                              02510000
025200********************                                              02520000
025300                                                                  02530000
025400 0000-PROGRAM-MAINLINE.                                           02540000
025500                                                                  02550000
025600     PERFORM 1000-INITIALIZE.                                     02560000
025700                                                                  02570000
025800     SET PS-IN-DRIVER-NOT-EOF TO TRUE.                            02580000
025900     PERFORM 2000-PROCESS-DRIVER-FILE                             02590000
026000         UNTIL PS-IN-DRIVER-EOF.                                  02600000
026100                                                                  02610000
026200     PERFORM 6000-EOJ-ROUTINE.                                    02620000
026300     STOP RUN.                                                    02630000
026400                                                                  02640000
026500                                                                  02650000
026600* ************************************************************** *02660000
026700* * INITIALIZATIONS                                            * *02670000
026800* ************************************************************** *02680000
026900 1000-INITIALIZE.                                                 02690000
027000                                                                  02700000
027100     MOVE PC-CURRENT-PROGRAM-NAME TO DM-PROGRAM.                  02710000
027200     DISPLAY DM-DISPLAY-MESSAGE.                                  02720000
027300                                                                  02730000
027400     MOVE PC-BEGINNING              TO DP-STATUS-DESCRIPTION.     02740000
027500     PERFORM 6200-DISPLAY-PGM-PROGRESS.                           02750000
027600                                                                  02760000
027700     PERFORM 9000-OPEN-IN-DRIVER-FILE.                            02770000
027800     PERFORM 9700-OPEN-OUT-EXTRACT-FILE.                          02780000
027900                                                                  02790000
028000                                                                  02800000
028100* ************************************************************** *02810000
028200* * 1) GET NEXT RECORD FROM DRIVER FILE, AND                   * *02820000
028300* *    1A- POPULATE KEY (WHERE CLAUSE) FOR TABLE CURSOR        * *02830000
028400* *    1B- OPEN TABLE CURSOR                                   * *02840000
028500* *    1C- LOOP THRU TABLE CURSOR TO EXTRACT ALL               * *02850000
028600* *        ROWS FOR THIS INPUT DRIVER RECORD                   * *02860000
028700* *    2) FOR EACH ROW,                                        * *02870000
028800* *       2A- INCREMENT COUNTS                                 * *02880000
028900* *       2B- WRITE EXTRACT RECORD                             * *02890000
029000* *    1D- CLOSE TABLE CURSOR                                  * *02900000
029100* ************************************************************** *02910000
029200 2000-PROCESS-DRIVER-FILE.                                        02920000
029300                                                                  02930000
029400     PERFORM 9050-READ-IN-DRIVER-FILE.                            02940000
029500     IF PS-IN-DRIVER-EOF                                          02950000
029600         CONTINUE                                                 02960000
029700     ELSE                                                         02970000
029800         MOVE AH002-PO-NBR TO         PV-PO-NBR-COMP              02980008
029900                                      PV-PO-NBR-NUM               02990000
030000         PERFORM 2100-CHECK-PGM-PROGRESS                          03000000
030100         SET PS-TABLE-LOOP-NOT-DONE   TO TRUE                     03010000
030200         SET PS-CURSOR-HAS-NO-DATA    TO TRUE                     03020000
030300         PERFORM 9100-OPEN-TABLE-CURSOR                           03030000
030400         PERFORM 3000-EXTRACT-ROWS-FROM-TABLE                     03040000
030500             UNTIL PS-TABLE-LOOP-DONE                             03050000
030600         PERFORM 9190-CLOSE-TABLE-CURSOR                          03060000
030700     END-IF.                                                      03070000
030800                                                                  03080000
030900                                                                  03090000
031000* ************************************************************** *03100000
031100* *    EVERY NTH RECORD (IE: INITIAL SETTING 1000), REPORT     * *03110000
031200* *    RECORD COUNT AND CURRENT DATE/TIME.  THIS WILL ASSIST   * *03120000
031300* *    WITH RUN-TIME ESTIMATE OF TIME REMAINING TO COMPLETE.   * *03130000
031400* ************************************************************** *03140000
031500 2100-CHECK-PGM-PROGRESS.                                         03150000
031600     DIVIDE    PV-IN-DRIVER-RECS-READ-CNT                         03160000
031700         BY        PC-HOW-OFTEN-TO-DISPLAY                        03170000
031800         GIVING    PV-DISPLAY-NTH-MULTIPLE                        03180000
031900         REMAINDER PV-DISPLAY-NTH-REMAINDER.                      03190000
032000                                                                  03200000
032100     IF PV-DISPLAY-NTH-REMAINDER = ZERO                           03210000
032200         MOVE PC-CONTINUING         TO DP-STATUS-DESCRIPTION      03220000
032300         PERFORM 6200-DISPLAY-PGM-PROGRESS                        03230000
032400     END-IF.                                                      03240000
032500                                                                  03250000
032600                                                                  03260000
032700* ************************************************************** *03270000
032800* * EXTRACT ROWS FROM TABLE, FOR THE CURRENT DRIVER RECORD     * *03280000
032900* ************************************************************** *03290000
033000 3000-EXTRACT-ROWS-FROM-TABLE.                                    03300000
033100     INITIALIZE DCLTPOAGMT.                                       03310000
033200     PERFORM 9150-FETCH-TABLE-CURSOR.                             03320000
033300     IF PS-TABLE-LOOP-DONE                                        03330000
033400         CONTINUE                                                 03340000
033500     ELSE                                                         03350000
033600         PERFORM 9750-WRITE-EXTRACT-RECORD                        03360000
033700     END-IF.                                                      03370000
033800                                                                  03380000
033900                                                                  03390000
034000* ************************************************************** *03400000
034100* * DISPLAY END OF RUN MESSAGE, CLOSE THE OUTPUT FILES         * *03410004
034200* ************************************************************** *03420000
034300 6000-EOJ-ROUTINE.                                                03430000
034400                                                                  03440000
034500     PERFORM 9090-CLOSE-IN-DRIVER-FILE.                           03450000
034600     PERFORM 9790-CLOSE-OUT-EXTRACT-FILE.                         03460000
034700                                                                  03470000
034800     MOVE PC-ENDING                 TO DP-STATUS-DESCRIPTION.     03480000
034900     PERFORM 6200-DISPLAY-PGM-PROGRESS.                           03490000
035000                                                                  03500000
035100                                                                  03510000
035200* ************************************************************** *03520000
035300* * DISPLAY PROGRAM PROGRESS.                                  * *03530000
035400* ************************************************************** *03540000
035500 6200-DISPLAY-PGM-PROGRESS.                                       03550000
035600                                                                  03560000
035700     EXEC SQL                                                     03570000
035800          SET :PV-TMST = CURRENT TIMESTAMP                        03580000
035900     END-EXEC.                                                    03590000
036000                                                                  03600000
036100     MOVE PC-CURRENT-PROGRAM-NAME   TO DP-PROGRAM.                03610000
036200     MOVE PV-TIMESTAMP-19           TO DP-TIMESTAMP-19.           03620000
036300     MOVE PV-IN-DRIVER-RECS-READ-CNT                              03630000
036400                                    TO DP-IN-CNT.                 03640000
036500*    MOVE PV-RECS-WITH-MATCHES-CNT  TO DP-MATCHES-FOUND-CNT.      03650000
036600     MOVE PV-TABLE-ROW-SELECT-CNT   TO DP-ROWS-SELECTED-CNT.      03660000
036700     MOVE PV-EXTRACT-WRITTEN-CNT    TO DP-OUT-CNT.                03670000
036800                                                                  03680000
036900     DISPLAY DP-DISPLAY-PROGRESS-MSG.                             03690000
037000                                                                  03700000
037100                                                                  03710000
037200* ************************************************************** *03720000
037300* * FILE AND DB2 TABLE ACCESS PARAGRAPHS.                      * *03730000
037400* * 90XX- INPUT:  DRIVER FILE                                  * *03740000
037500* * 91XX- INPUT:  TABLE CURSOR                                 * *03750000
037600* * 97XX- OUTPUT: TABLE EXTRACT                                * *03760000
037700* ************************************************************** *03770000
037800                                                                  03780000
037900* ************************************************************** *03790000
038000* * OPEN  INPUT DRIVER FILE                                    * *03800000
038100* ************************************************************** *03810000
038200 9000-OPEN-IN-DRIVER-FILE.                                        03820000
038300     OPEN  INPUT  IN-DRIVER-FILE.                                 03830000
038400                                                                  03840000
038500                                                                  03850000
038600* ************************************************************** *03860000
038700* * READ  INPUT DRIVER FILE OF ELIGIBLE DATA TO EXTRACT        * *03870000
038800* ************************************************************** *03880000
038900 9050-READ-IN-DRIVER-FILE.                                        03890000
039000     READ IN-DRIVER-FILE                                          03900000
039100          INTO AH002-DRIVER-RECORD-LAYOUT                         03910008
039200          AT END                                                  03920000
039300              SET PS-IN-DRIVER-EOF TO TRUE.                       03930000
039400                                                                  03940000
039500     IF PS-IN-DRIVER-EOF                                          03950000
039600         CONTINUE                                                 03960000
039700     ELSE                                                         03970000
039800         ADD +1 TO PV-IN-DRIVER-RECS-READ-CNT                     03980000
039900     END-IF.                                                      03990000
040000                                                                  04000000
040100                                                                  04010000
040200* ************************************************************** *04020000
040300* * CLOSE INPUT DRIVER FILE                                    * *04030000
040400* ************************************************************** *04040000
040500 9090-CLOSE-IN-DRIVER-FILE.                                       04050000
040600     CLOSE IN-DRIVER-FILE.                                        04060000
040700                                                                  04070000
040800                                                                  04080000
040900* ************************************************************** *04090000
041000* * OPEN  TABLE CURSOR                                         * *04100000
041100* ************************************************************** *04110000
041200 9100-OPEN-TABLE-CURSOR.                                          04120000
041300     EXEC SQL                                                     04130000
041400          OPEN TABLE-CURSOR                                       04140000
041500     END-EXEC.                                                    04150000
041600                                                                  04160000
041700     EVALUATE TRUE                                                04170000
041800         WHEN SQLCODE = ZERO                                      04180000
